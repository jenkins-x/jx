{
  "$id": "https:/jenkins-x.io/tests/basicTypes.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "test values.yaml",
  "type": "object",
  "properties": {
    "enablePersistentStorage": {
      "type": "boolean"
    },
    "enableCheese": {
      "type": "boolean"
    }
  },
  "AllOf" : [
    {
      "if": {
        "properties": {
          "enablePersistentStorage": {
            "const": "true",
            "type": "boolean"
          }
        }
      },
      "then": {
        "properties": {
          "databaseConnectionUrl": {
            "type": "string"
          },
          "databaseUsername": {
            "type": "string"
          },
          "databasePassword": {
            "type": "string",
            "format": "password"
          }
        }
      },
      "else": {
        "properties": {
          "enableInMemoryDB": {
            "type": "boolean",
            "default": true
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "enableCheese": {
            "const": "true",
            "type": "boolean"
          }
        }
      },
      "then": {
        "properties": {
          "cheeseType": {
            "type": "string"
          }
        }
      },
      "else": {
        "properties": {
          "iDontLikeCheese": {
            "type": "boolean",
            "default": true
          }
        }
      }
    }]
}